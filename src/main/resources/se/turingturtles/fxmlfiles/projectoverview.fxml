<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.StackedBarChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane id="overview" fx:id="overviewTab" onMouseEntered="#updateFields" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.turingturtles.controllers.ProjectOverviewController">
    <children>
          <StackedBarChart fx:id="projectSchedule" title="Schedule" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="30.0">
              <yAxis>
                  <CategoryAxis fx:id="taskAxis" label="Task" />
              </yAxis>
              <xAxis>
                  <NumberAxis fx:id="weeksAxis" label="Weeks" />
              </xAxis>
              <opaqueInsets>
                  <Insets />
              </opaqueInsets>
          </StackedBarChart>
          <VBox maxWidth="-Infinity" minWidth="-Infinity" prefWidth="200.0" AnchorPane.bottomAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
              <children>
                  <Text id="h1-tab-title" fx:id="projectName" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="hbox-content" text="Project Name" wrappingWidth="200.0">
                      <VBox.margin>
                          <Insets top="30.0" />
                      </VBox.margin>
                  </Text>
                  <Text fx:id="numberOfTasks" strokeType="OUTSIDE" strokeWidth="0.0" text="Total number of task: 35">
                      <VBox.margin>
                          <Insets top="10.0" />
                      </VBox.margin>
                  </Text>
                  <Text fx:id="numberOfMembers" strokeType="OUTSIDE" strokeWidth="0.0" text="Total number of members: 99" wrappingWidth="184.31951904296875">
                      <VBox.margin>
                          <Insets top="10.0" />
                      </VBox.margin>
                  </Text>
                  <Text fx:id="projectDuration" strokeType="OUTSIDE" strokeWidth="0.0" text="Project duration: 99w">
                      <VBox.margin>
                          <Insets top="10.0" />
                      </VBox.margin>
                  </Text>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Turing Turtle is a management tool where you can keep track of tasks, risks, team members, budgeting and scheduling." wrappingWidth="200.0">
                      <VBox.margin>
                          <Insets top="50.0" />
                      </VBox.margin>
                  </Text>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Use the menu to the left to navigate and start managing your project." wrappingWidth="200.0">
                      <VBox.margin>
                          <Insets top="10.0" />
                      </VBox.margin>
                  </Text>
                  <Button fx:id="scheduleButton" maxWidth="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#updateSchedule" prefWidth="200.0" styleClass="hbox-content" text="Refresh schedule">
                      <VBox.margin>
                          <Insets top="50.0" />
                      </VBox.margin>
                  </Button>
              </children>
          </VBox>
    </children>
</AnchorPane>
